<div class="container">
<div class="row justify-content-between">
<div class="col-5">
<section>   
    <h2 class="addCoffee">Add Coffee Shop</h2>

    <form class="new-coffee-form">
        <div>
            <label for="cafe-name">Coffee Shop Name</label>
            <input type="text" id="cafe-name" name="cafe-name" />
        </div>
        <div>
            <label for="city-name">Coffee Shop Address</label>
            <input id="city-name" name="city-name" />
        </div>
    <button type="submit" class="btn">Create</button>
    </form>
    </div>
</section>

<div class="col-5">
<section>
    <h2 class="addCoffee">Your Added Coffee Shop</h2>
    <ol>
        {{#each shops as |coffeeShop|}}
        <li class="coffeeList">
        {{> coffee-info coffeeShop}}
        <button type="button" class="delete-post-btn">Delete post</button>
        </li>
        {{/each}}
    </ol>
</section>
</div>
</div>

<script src="/javascript/delete-cafe.js"></script>
<script src="/javascript/add-cafe.js"></script>