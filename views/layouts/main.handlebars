        <a href="/book" class="text-dark h3 text-decoration-none">Find a Book Club</a>
        <a href="/coffee" class="text-dark h3 text-decoration-none">Find a Cafe</a>
        {{else}}
        <a href="/login" class="text-dark h5">Login</a>
        {{/if}}
      </nav>
        
    </header>
    <main>
      {{{ body }}}
      
    </main>
    <footer>
      Thanks for visiting!
    </footer>
